<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE struts PUBLIC	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"	"http://struts.apache.org/dtds/struts-2.3.dtd"><struts>	<constant name="struts.objectFactory" value="spring" />      <constant name="struts.devMode" value="true" />	   <!-- 全局的信息 处理-->    <constant name="struts.custom.i18n.resources" value="upload" />    <!--上传全局大小设置 --> 	<constant name="struts.multipart.maxSize" value="20000000"></constant><!--  	<constant name="struts.multipart.saveDir" value="/tmp/tomcat/upload"></constant> --> 	    <package name="default" namespace="/" extends="json-default">    	<action name="addgoods" class="goodsAction" method="addGoods">    		<result type="redirect" name="success">/index.jsp</result>    	</action>    <action name="uploadfile" class="com.goodsswitch.action.GoodsFileUploadAction"  method="upload">	   		<result  type ="json">				<param name="root">dataMap</param>	               <param name="excludeNullProperties">true</param> 			</result>			<!-- 上传局部参数设置 --> 	     <interceptor-ref name ="fileUploadStack"/>    	   		<interceptor-ref name="defaultStack">	   			<param name="fileUpload.allowedExtensions">.bmp,.gif,.png,.jpg</param>	   			<param name="fileUpload.maximumSize">60000000</param>	   		</interceptor-ref>    	</action>	   	<action name="gajax" class="ajaxAction">    		<result  type ="json">				<param name="root">dataMap</param>                <param name="excludeNullProperties">true</param> 			</result>    	</action>    	<action name="addComment" class="com.goodsswitch.action.CommentAction" method="insert">    		<result type ="json">				<param name="root">dataMap</param>                <param name="excludeNullProperties">true</param> 			</result>    	</action>    	<action name="showMore" class="com.goodsswitch.action.CommentAction" method="showMore">    		<result type ="json">				<param name="root">dataMap</param>                <param name="excludeNullProperties">true</param> 			</result>    	</action>    </package></struts>